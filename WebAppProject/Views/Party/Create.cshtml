<div class="title">สร้างปาร์ตี้</div>

<form method="post" asp-controller="Party" asp-action="Create">
    <div class="container">
        <div class="card">
            <div class="explorer">👀 กำลังค้นหาผู้คน</div>
            <div class="time"><input name="Time" asp-for="Time"></div>
            <div class="time" style="color:#84A7F6 ;">เวลาคงเหลือ: x วัน</div>
            <div class="name"><input type="text" name="Name" asp-for="Name" placeholder="ชื่อปาร์ตี้"></div>
            <span asp-validation-for="Name" style="font-size: 16px; color: red"></span>
            <div class="location"><input type="text" name="location" asp-for="location" placeholder="สถานที่"></div>
            <span asp-validation-for="location" style="font-size: 16px; color: red"></span>
            <div class="description-container">
                <div class="description">
                    <input type="text" name="description" asp-for="Description"
                           placeholder="รายละเอียด">
                </div>
                <input type="text" asp-for="img" id="img" placeholder="Link รูปภาพ">
            </div>
            <div class="additional-info">
                <a class="linker">
                    <div class="max">
                        <p>จำนวนผู้เข้าร่วมสูงสุด</p>
                        <input type="number" name="Max" asp-for="Max" min="1" max="30" placeholder="ระบุ">

                    </div>
                </a>
                <a class="linker">
                    <div class="joined-user">
                        <p>เจ้าของประกาศ</p>
                        <img src="https://www.ce.kmitl.ac.th/api/faculty/download/Surin" alt="profile">
                        <div class="joined-user-name">@Context.Session.GetString("Email")</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="button-container" id="cardbtn">
        <button type="submit" class="card-button-green" onclick="checkFormEmpty(this)">เปิดปาร์ตี้</button>
</form>
        <!-- The Modal -->
<form method="get" asp-controller="Party" asp-action="Index">
	<a><button class="card-button-red">ยกเลิก</button></a>
</form>
    </div>
<div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <img src="https://gifdb.com/images/high/let-s-party-michael-scott-the-office-7fy87uizwrrwb5xw.gif"
             alt="Joined successfully">
        <p>ยินดีต้อนรับสู่ปาร์ตี้!</p>
    </div>
</div>
